<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/postpay/checkout" method="POST">
        <service class="Postpay\Payment\Api\PlaceOrderInterface" method="getCheckoutResponse" />
        <resources>
            <resource ref="Postpay_Payment::checkout" />
        </resources>
    </route>
    <route url="/V1/postpay/capture" method="POST">
        <service class="Postpay\Payment\Api\PlaceOrderInterface" method="capture" />
        <resources>
            <resource ref="Postpay_Payment::capture" />
        </resources>
    </route>
</routes>
